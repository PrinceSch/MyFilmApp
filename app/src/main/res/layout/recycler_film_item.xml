<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_film"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/item_backgroung"
    android:padding="@dimen/padding">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_poster"
        android:layout_width="@dimen/item_poster"
        android:layout_height="@dimen/item_poster"
        app:layout_constraintBottom_toTopOf="@id/item_film_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_film_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_poster" />

</androidx.constraintlayout.widget.ConstraintLayout>